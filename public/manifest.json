{
    "manifest_version": 3,
    "name": "Missionary",
    "version": "1.0.0",
    "description": "Convert LaTeX to PDF directly in Chrome.",
    "action": {
        "default_popup": "index.html",
        "default_icon": "logo.png"
    },
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "host_permissions": [
        "https://texlive.net/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://*.chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}